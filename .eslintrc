{
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "valid-jsdoc": [
      1,
      {
        "requireParamDescription": false,
        "requireReturnDescription": false
      }
    ],
    "no-cond-assign": 1,
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "comma-style": [
      2,
      "first"
    ],
    "no-multi-spaces": [
      1,
      {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "key-spacing": [
      2,
      {
        "align": "colon",
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "camelcase": 0
  }
}